{% set title = "Index Page" %}

{% extends "njk-layouts/_main.njk" %}

{% block content %}

{% set colorGroups = ['primary', 'secondary', 'tertiary', 'error', 'success'] %}
{% set colorShades = ['0','50','100','200','300','400','500','600','700','800','900','950'] %}

<div style="display: flex; flex-direction: column; gap: 2em">
  {% for group in colorGroups %}
    <div>
      <div style="font-weight: bold; margin-bottom: 0.3em;">{{ group }}</div>
      <div style="display: flex; flex-wrap: wrap; gap: 8px;">
        {% for shade in colorShades %}
          <div style="
              width: 88px;
              height: 48px;
              background: var(--{{ group }}-{{ shade }});
              display: flex;
              align-items: end;
              justify-content: center;
              border-radius: 6px;
              border: 1px solid #eee;
              position: relative;
              font-size: 13px;
              color: #111;
              margin-bottom: 4px;
            ">
            <span style="
                background: rgba(255,255,255,0.85);
                padding: 2px 6px;
                border-radius: 4px 4px 0 0;
                font-size: 12px;
                position: absolute;
                bottom: 0;
                left: 0;
              ">{{ shade }}</span>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>


{% endblock %}